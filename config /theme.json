{
  "theme": {
    "id": "scp-classic",
    "name": "SCP Classic",
    "author": "YourName",
    "version": "1.0.0"
  },

  "assets": {
    "css": [
      "/css/scp.css",
      "/css/modules.css"
    ],
    "js": [
      "/js/wikidot-ui.js"
    ],
    "fonts": [
      "https://fonts.googleapis.com/css2?family=Source+Serif+4&display=swap"
    ]
  },

  "layout": {
    "template": "layout",
    "contentTemplate": "page",
    "sidebar": true,
    "sidebarPosition": "left"
  },

  "modules": {
    "header": "header",
    "sidebar": "sidebar",
    "footer": "footer",
    "rating": "rating"
  },

  "page": {
    "width": "740px",
    "background": "#f5f5f5",
    "textColor": "#111",
    "fontFamily": "Source Serif 4, serif"
  },

  "scp": {
    "rating": {
      "enabled": true,
      "initialScore": 0
    },
    "collapsible": {
      "enabled": true
    },
    "tabs": {
      "enabled": true
    }
  }
}
